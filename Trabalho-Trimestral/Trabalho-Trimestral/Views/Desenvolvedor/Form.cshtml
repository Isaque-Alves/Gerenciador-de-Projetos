@model Trabalho_Trimestral.Models.Desenvolvedor

<div class="container">
    <h2>Desenvolvedor</h2>

    <form method="post">
        <div class="form-group">
            <label>Nome:</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>E-mail:</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Senha:</label>
            <input asp-for="Senha" class="form-control" type="password" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="Admin" class="form-check-input" type="checkbox" id="check" />
            <label for="check">Sou Administrador</label>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                Salvar
            </button>
        </div>
    </form>
</div>


