@model Trabalho_Trimestral.Models.Requisito

<h2>Requisito</h2>

<form method="post">
    <div class="form-group">
        <label>Descrição:</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Deixe aqui as observações:</label>
        <textarea asp-for="Observacoes" class="form-control"></textarea>
        <span asp-validation-for="Observacoes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Data prevista:</label>
        <input asp-for="DataPrevista" class="form-control" type="date" />
        <span asp-validation-for="DataPrevista" class="text-danger"></span>
    </div>



    <fieldset class="form-group card">
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Desenvolvedores</legend>
            <div class="col-sm-10">
                @foreach (Desenvolvedor d in ViewBag.Desenvolvedores)
                {
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="Desenvolvedores[]" value="@d.Id">@d.Nome
                        </label>
                    </div>

                }
            </div>
        </div>
    </fieldset>

    <div class="form-group form-check">
        <label for="check"><input asp-for="Funcional" class="form-check-input" type="checkbox" id="check" />É um requisito funcional</label>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            Salvar
        </button>
    </div>
</form>

