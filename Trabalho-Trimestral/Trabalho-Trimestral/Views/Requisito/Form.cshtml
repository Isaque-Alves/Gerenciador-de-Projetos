@model Trabalho_Trimestral.Models.Requisito

<h2>Requisito</h2>

<form method="post">
    <div class="form-group">
        <label>Descrição:</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Deixe aqui as observações:</label>
        <textarea asp-for="Observacoes" class="form-control"></textarea>
        <span asp-validation-for="Observacoes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Data prevista:</label>
        <input asp-for="DataPrevista" class="form-control" type="date"/>
        <span asp-validation-for="DataPrevista" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label for="check"><input asp-for="Funcional" class="form-check-input" type="checkbox" id="check" />É um requisito funcional</label>
    </div>

    <div class="form-group"></div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            Salvar
        </button>
    </div>
</form>

